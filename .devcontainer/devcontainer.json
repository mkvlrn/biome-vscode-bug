{
  "name": "${localWorkspaceFolderBasename}-devpod",
  "image": "ghcr.io/mkvlrn/arch-devcontainer:latest",
  "remoteUser": "dev",
  "workspaceFolder": "/code/${localWorkspaceFolderBasename}",
  "workspaceMount": "source=${localWorkspaceFolder},target=/code/${localWorkspaceFolderBasename},type=bind",
  "mounts": [
    // "source=${localEnv:HOME}/.ssh/id_ed25519,target=/home/dev/.ssh/mounted_key,type=bind,consistency=cached,readonly",
    // "source=${localWorkspaceFolder}/.devcontainer/.env,target=/home/dev/.env-local,type=bind,consistency=cached,readonly"
  ],
  "features": {},
  "runArgs": ["--name", "devcontainer_${localWorkspaceFolderBasename}"],
  "postCreateCommand": "/usr/local/bin/git-setup.sh"
}
